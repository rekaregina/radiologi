<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.radiologi">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logoapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logoapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TerimaAdmin"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".DataAdmin"
            android:label="@string/title_activity_data_admin"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".DataDokter"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity android:name=".RoomDokter"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".RoomAdmin"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Daftar"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".TampilkanDataPasienActivity"
            android:label="Data Pasien"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".PdfViewerActivity"
            android:label="Data Pasien" />
        <provider
            android:authorities="com.example.radiologi.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

</manifest>